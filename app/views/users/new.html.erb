<%= form_for @user do |form| %>

<div class = "name-field">
<%= form.label :name %>
<%= form.text_field :name %>

<div class="text-field">
  <%= form.label :email %>
  <%= form.text_field :email, type: 'email' %>
</div>

<div class="password-field">
  <%= form.label :password %>
  <%= form.password_field :password %>
</div>

 <div class="submit-field">
   <%= form.submit "Sign Up"%>
</div>

<%end%>